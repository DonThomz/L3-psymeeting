<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="login_pane" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.LoginController">
    <stylesheets>
        <URL value="@../stylesheets/login.css" />
    </stylesheets>
   <children>
      <VBox fx:id="box_login" alignment="CENTER" prefHeight="600.0" prefWidth="450.0">
         <children>
            <Label text="PsyMeeting">
               <font>
                  <Font name="Roboto Thin" size="36.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="50.0" />
               </padding>
            </Label>
            <TextField fx:id="username_field" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0" promptText="username">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </TextField>
            <PasswordField fx:id="password_field" maxWidth="300.0" prefHeight="50.0" prefWidth="300.0" promptText="password">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
               <padding>
                  <Insets left="20.0" />
               </padding>
            </PasswordField>
            <CheckBox fx:id="save_pwd_checkbox" mnemonicParsing="false" text="Save password">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="Roboto Medium" size="13.0" />
               </font>
            </CheckBox>
            <Button fx:id="login_button" mnemonicParsing="false" onAction="#login" prefHeight="56.0" prefWidth="170.0" stylesheets="@../stylesheets/login.css" text="Log In">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
