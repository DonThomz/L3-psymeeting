<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="100.0" prefHeight="100.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.TopBarController">
    <stylesheets>
        <URL value="@../stylesheets/top_bar.css" />
    </stylesheets>
    <HBox alignment="CENTER_LEFT" styleClass="top_bar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="CENTER">
         <Region prefHeight="100.0" prefWidth="66.0" HBox.hgrow="ALWAYS" />  <!-- MENU -->

        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="803.0" HBox.hgrow="ALWAYS">

            <HBox alignment="CENTER"> <!-- HOME LINK -->
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <FontAwesomeIconView glyphName="HOME" />
                <Hyperlink fx:id="home_link" onAction="#switchScene" text="Home" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="18.0" />
                    </font>
                </Hyperlink>
            </HBox> <!-- END -->
            <HBox alignment="CENTER"> <!-- CONSULTATION LINK -->
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <FontAwesomeIconView glyphName="BRIEFCASE" />
                <Hyperlink fx:id="consultation_link" onAction="#switchScene" text="Consultation" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="18.0" />
                    </font>
                </Hyperlink>
            </HBox> <!-- END -->

            <HBox alignment="CENTER"> <!-- PATIENTS LINK -->
                <HBox.margin>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                </HBox.margin>
                <FontAwesomeIconView glyphName="USERS" />
                <Hyperlink fx:id="patients_link" onAction="#switchScene" text="Patients" textFill="WHITE">
                    <font>
                        <Font name="Roboto Medium" size="18.0" />
                    </font>
                </Hyperlink>
            </HBox> <!-- END -->
        </HBox> <!-- END MENU -->
        <MenuButton fx:id="user_menu" mnemonicParsing="false" prefWidth="152.0" text=" ">
            <items>
                <MenuItem mnemonicParsing="false" text="Settings">
               <graphic>
                  <FontAwesomeIconView glyphName="COG" />
               </graphic></MenuItem>
                <MenuItem mnemonicParsing="false" onAction="#logout" text="Log Out">
               <graphic>
                  <FontAwesomeIconView glyphName="SIGN_OUT" />
               </graphic></MenuItem>
            </items>
        </MenuButton>
        <Region prefHeight="100.0" prefWidth="78.0" HBox.hgrow="NEVER" />
    </HBox>
</AnchorPane>
