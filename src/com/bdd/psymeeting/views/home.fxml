<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bdd.psymeeting.controller.HomeController">
    <stylesheets>
        <URL value="@stylesheets/home.css" />
        <URL value="@stylesheets/app.css" />
    </stylesheets>
   <StackPane fx:id="stackPane" layoutX="-9.0" layoutY="-9.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
      <children>
          <BorderPane>
              <top>
                  <fx:include source="top_bar.fxml" />
              </top>
              <center>
                  <AnchorPane BorderPane.alignment="CENTER">
                  <children>
                     <VBox alignment="CENTER" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="20.0">
                        <children>
                           <Label fx:id="weekLabel" />
                           <GridPane fx:id="gridColumnNames">
                              <effect>
                                 <DropShadow color="#000000b6" />
                              </effect>
                           </GridPane>
                           <ScrollPane fx:id="scrollPane" hbarPolicy="ALWAYS" VBox.vgrow="ALWAYS">
                              <content>
                                 <GridPane fx:id="scheduleGrid">
                                    <effect>
                                       <DropShadow color="#000000b6" />
                                    </effect>
                                 </GridPane>
                              </content>
                           </ScrollPane>
                           <HBox alignment="CENTER">
                              <children>
                                 <JFXButton fx:id="previousPagination" buttonType="RAISED" onAction="#pagination" styleClass="paginationButton">
                                    <graphic>
                                       <FontAwesomeIconView glyphName="ARROW_LEFT" />
                                    </graphic>
                                    <HBox.margin>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                    <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                 </JFXButton>
                                 <JFXButton fx:id="nextPagination" buttonType="RAISED" onAction="#pagination" styleClass="paginationButton">
                                    <graphic>
                                       <FontAwesomeIconView glyphName="ARROW_RIGHT" />
                                    </graphic>
                                    <HBox.margin>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </HBox.margin>
                                    <padding>
                                       <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                                    </padding>
                                 </JFXButton>
                              </children>
                           </HBox>
                           <Region VBox.vgrow="ALWAYS" />
                        </children>
                     </VBox>
                  </children>
               </AnchorPane>
              </center>
            <left>
               <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
            </left>
            <right>
               <Region prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
            </right>
          </BorderPane>
      </children>
   </StackPane>
</AnchorPane>
